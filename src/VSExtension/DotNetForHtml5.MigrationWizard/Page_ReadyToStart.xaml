<Page x:Class="DotNetForHtml5.MigrationWizard.Page_ReadyToStart"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="Page_ReadyToStart">

    <Border x:Name="LayoutRoot" Padding="20">
        <StackPanel>
            <TextBlock Text="Ready!" FontSize="18" FontWeight="Bold" TextWrapping="Wrap"/>
            <TextBlock Text="We are now ready to start the automated migration process." FontSize="12" TextWrapping="Wrap" Margin="0,22,0,0"/>
            <TextBlock Text="Click Next to proceed." FontSize="12" TextWrapping="Wrap" Margin="0,18,0,0"/>
        </StackPanel>
    </Border>
</Page>
