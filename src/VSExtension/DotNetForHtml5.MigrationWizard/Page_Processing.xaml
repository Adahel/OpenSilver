<Page x:Class="DotNetForHtml5.MigrationWizard.Page_Processing"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="Page_Processing">

    <Border x:Name="LayoutRoot" Padding="20">
        <DockPanel LastChildFill="True">
            <TextBlock x:Name="Title" Text="Processing, please wait..." DockPanel.Dock="Top" FontSize="18" FontWeight="Bold" TextWrapping="Wrap"/>
            <TextBlock Text="Progress Log:" DockPanel.Dock="Top" FontSize="12" TextWrapping="Wrap" Margin="0,22,0,0" FontWeight="Bold" Foreground="Gray"/>
            <TextBox x:Name="ProgressLog" Margin="0,5,0,0" IsReadOnly="True" AcceptsReturn="True" Background="#66FFFFFF" Foreground="Gray" FontFamily="Courier New" Padding="5" BorderBrush="LightGray" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible"/>
        </DockPanel>
    </Border>
</Page>
